<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mooscover"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    
     <uses-permission 
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.mooscover.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.mooscover.DiscoverSongs"
            android:label="@string/title_activity_discover_songs" >
        </activity>
        <activity
            android:name="com.example.mooscover.ShowList"
            android:label="@string/title_activity_show_list" >
        </activity>
        <activity
            android:name="com.example.mooscover.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

</manifest>
